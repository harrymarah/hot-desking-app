<%- layout('layouts/boilerplate') %> 

<h1 class="p-2">Add your office</h1>

<form class="p-2" action="/company/<%= company._id %>/office" method="POST">
    <div class="my-3">
        <label for="name">Office Name:</label>
        <input type="text" id="name" name="office[officeNickname]">
    </div>
    <div class="my-3">
        <label for="streetAddress">Street Address:</label>
        <input type="text" id="streetAddress" name="office[officeAddress][streetAddress]">
    </div>
    <div class="my-3">
        <label for="town">Town:</label>
        <input type="text" id="town" name="office[officeAddress][town]">
    </div>
    <div class="my-3">
        <label for="county">County/City:</label>
        <input type="text" id="county" name="office[officeAddress][county]">
    </div>
    <div class="my-3">
        <label for="postcode">Postcode:</label>
        <input type="text" id="postcode" name="office[officeAddress][postcode]">
    </div>
    <div class="my-3">
        <label for="floorplan">Floor plan:</label>
        <input type="text" id="floorplan" name="office[floorPlan]">
    </div>
    <div class="my-3">
        <label for="noOfDesks">Number of desks:</label>
        <input type="number" id="noOfDesks" name="noOfDesks">
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
</form>





