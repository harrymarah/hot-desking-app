<%- layout('layouts/boilerplate') %> 



<div class="container my-5">
    <div class="row justify-content-md-center">
        <div class="col-7">
          
            <h2 class="display-4">
                Welcome to <%= company.companyName %>
            </h2>
            <!-- <h5  class="text-muted"></h5> -->
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa dolorem illo rem expedita quod aspernatur quae perferendis quo pariatur ad deleniti incidunt fugiat veritatis eum, nemo vero possimus beatae, quaerat voluptatem, cupiditate sed? Excepturi vitae deleniti laborum obcaecati eligendi adipisci repellat voluptas praesentium, facilis rerum sequi atque facere vel odio.</p>
            <a class="btn btn-primary btn-sm" href="/company">View all companies</a>
            <a class="btn btn-warning btn-sm" href="/company/<%= company._id %>/edit">Edit company</a>
            <form class="d-inline" action="/company/<%= company._id %>?_method=DELETE" method="POST">
                <input class="btn btn-danger btn-sm" type="submit" value="Delete Company">
            </form>
            <a href="/company/<%= company._id %>/newoffice" class="btn btn-info btn-sm">Add an office</a>
        </div>
        <div class="col-3">
          <img class="img-fluid" src="<%= company.companyLogo %>" alt="" width="200px">
        </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-10 mt-5">
        <h2 class="display-6">My Offices</h2>
        <div class="office-cards d-flex mx-auto">
          <% for(let i = 0; i < company.offices.length; i++){ %> 
            <div class="card m-3" style="width: 18rem;">
              <!-- <img src="" class="card-img-top" alt="..."> -->
              <div class="card-body">
                <h5 class="card-title"><%= company.offices[i].officeNickname %></h5>
                <p class="card-text"><%= company.offices[i].officeAddress.streetAddress %></p>
                <a href="/company/<%= company._id %>/<%= company.offices[i]._id %>" class="btn btn-outline-primary btn-sm">View office</a>
                <a href="/company/<%= company._id %>/<%= company.offices[i]._id %>/edit" class="btn btn-outline-warning btn-sm">Edit office</a>
              </div>
            </div>
          <% } %> 
        </div>
        


        

        <p></p>
        <p></p>
      </div>
      
    </div>
</div> 

