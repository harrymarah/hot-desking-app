<%- layout('layouts/boilerplate') %> 

<h1 class="p-2">Add your company</h1>

<form class="p-2" action="/myoffices" method="POST">
    <div class="my-3">
        <label for="name">Company Name:</label>
        <input type="text" id="name" name="business[name]">
    </div>
    <div class="my-3">
        <label for="address">Address:</label>
        <input type="text" id="address" name="business[address]">
    </div>
    <div class="my-3">
        <label for="floorPlan">Floor Plan Link:</label>
        <input type="text" id="floorPlan" name="business[floorPlan]">
    </div>
    <div class="my-3">
        <label for="numOfDesks">Number of Bookable Desks:</label>
        <input type="number" id="numOfDesks" name="business[numOfDesks]">
    </div>
    <div class="my-3">
        <label for="businessCode">Unique Business Code:</label>
        <input type="text" id="businessCode" name="business[businessCode]">
    </div>
</form>